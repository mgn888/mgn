---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Services</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/validator">Validator Services</a></li>
          <li><a href="/infrastructure">Web3 Infrastructure</a></li>
          <li><a href="/staking">Staking Solutions</a></li>
          <li><a href="/api">API Services</a></li>
          <li><a href="/monitoring">Monitoring & Analytics</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Resources</h3>
        <ul class="flex flex-col gap-2">
          <li>
            <ExternalLink href="https://ethereum.org/en/staking/">Ethereum Staking</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://docs.polygon.technology/">Polygon Documentation</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://docs.solana.com/">Solana Documentation</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://wiki.polkadot.network/">Polkadot Wiki</ExternalLink>
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75]">
          Professional blockchain validator services with 99.9% uptime guarantee. Secure, reliable, and high-performance infrastructure for Web3 applications.
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} - MegaNode. All rights reserved.
      </p>
      <p>
        Professional blockchain infrastructure and validator services.
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
